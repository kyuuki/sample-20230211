<h2>管理画面 - ユーザー一覧</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="col-1"><%= user.id %></td>
      <td class="col-2"><%= user.name %></td>
      <td class="col-2"><%= user.email %></td>
      <td class="col-2"><%= user.tasks.size %></td>
      <td class="col-2">
        <% if user.admin? %>
          管理ユーザー
        <% else %> 
          一般ユーザー
        <% end %> 
      </td>
      <td class="col">
        <%= link_to "詳細", admin_user_path(user) %>
        <%= link_to "編集", edit_admin_user_path(user) %>
        <%= link_to "削除", admin_user_path(user), method: :delete, id: "delete-#{user.id}" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</ul>
</table>

<%= link_to "新規登録", new_admin_user_path %>
