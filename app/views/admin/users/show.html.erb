<h2>管理画面 - ユーザー詳細</h2>

<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext"><%= @user.name %></div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext"><%= @user.email %></div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">管理者</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext">
        <% if @user.admin %>
          管理ユーザー
        <% else %>
          一般ユーザー
        <% end %>
      </div>
    </div>
  </div>
</form>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class="task-title"><%= task.title %></td>
      <td class="col-2"><%= task.deadline %></td>
      <td class="col-2">
        <% if task.status == 1 %>
          未着手
        <% elsif task.status == 2 %>
          着手中
        <% elsif task.status == 3 %>
          完了
        <% end %>
      </td>
      <td class="col-2">
        <% if task.priority == 1 %>
          高
        <% elsif task.priority == 2 %>
          中
        <% elsif task.priority == 3 %>
          低
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</ul>
</table>

<%= link_to "一覧へ", admin_users_path %>
